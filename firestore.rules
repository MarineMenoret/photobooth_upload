rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Allow only content owners to read, write, create and update their own projects and admins (users in the admins collection)
    match /projects/{document=**} {
      allow read, create, update, list: if (request.auth.uid != null) && ((request.auth.uid == resource.data.authorId) || isAdmin());
    }
    // Capture
    match /users/{userId} {
      allow read, create, update: if (request.auth.uid != null) && ((request.auth.uid == userId) || isAdmin());
    }
  }
}